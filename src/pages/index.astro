---
import Layout from '../layouts/Layout.astro';
import { FindBoard } from '../components/FindBoard';
---

<Layout title="Super Bowl Squares">
  <main class="min-h-screen bg-gray-100 p-8">
    <div class="max-w-2xl mx-auto">
      <h1 class="text-4xl font-bold text-center mb-12">Super Bowl Squares</h1>

      <div class="space-y-8">
        <div class="bg-white p-8 rounded-lg shadow-md">
          <h2 class="text-2xl font-bold mb-4">Find a Board</h2>
          <FindBoard client:load />
        </div>

        <div class="bg-white p-8 rounded-lg shadow-md">
          <h2 class="text-2xl font-bold mb-4">Create New Board</h2>
          <form action="/api/board/create" method="post" class="space-y-4">
            <button
              type="submit"
              class="w-full bg-black text-white py-2 px-4 rounded hover:bg-gray-800"
            >
              Create New Board
            </button>
          </form>
        </div>
      </div>
    </div>
  </main>
</Layout>
